<h2 class="text-primary mb-4">Bank Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "p-4 border rounded shadow" }) do |f| %>
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
    </div>

    <div class="col-md-6">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>
